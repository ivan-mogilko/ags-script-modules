// main global script file

// called when the game starts, before the first room is loaded
function game_start()
{
    Mouse.Mode = eModePointer;
    
    // Configure Windows system
    Windows.BorderWidth = 4;
    Windows.CaptionHeight = 10;
    Windows.NormalCursor = eModePointer;
    Windows.DragCursor = eModeWinDrag;
    Windows.ResizeHorizontalCursor = eModeWinSizeH;
    Windows.ResizeVerticalCursor = eModeWinSizeV;
    Windows.ResizeDiagonalCursor = eModeWinSizeD;
    
    // Add GUIs to the system
    gGui1.AddToWindows(eWinStyleMoveable + eWinStyleSizeable);
    gGui2.AddToWindows(eWinStyleMoveable + eWinStyleSizeable);
    gGui3.AddToWindows(eWinStyleMoveable + eWinStyleSizeable);
}

