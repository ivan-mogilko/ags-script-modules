// main global script file

// called when the game starts, before the first room is loaded
function game_start()
{
    Mouse.Mode = eModePointer;
    
    // Configure Windows system
    Windows.BorderWidth = 4;
    Windows.CaptionHeight = 10;
    Windows.NormalCursor = eModePointer;
    Windows.DragCursor = eModeWinDrag;
    Windows.ResizeHorizontalCursor = eModeWinSizeH;
    Windows.ResizeVerticalCursor = eModeWinSizeV;
    Windows.ResizeTLBRCursor = eModeWinSizeTL;
    Windows.ResizeTRBLCursor = eModeWinSizeTR;
    
    // Add GUIs to the system
    gGui1.AddToWindows(eWinStyleMoveable + eWinStyleSizeable);
    Window* w1 = gGui1.GetWindow();
    w1.MinWidth = 50;
    w1.MinHeight = 50;
    gGui2.AddToWindows(eWinStyleMoveable + eWinStyleSizeable);
    Window* w2 = gGui2.GetWindow();
    w2.MinWidth = 50;
    w2.MinHeight = 50;
    gGui3.AddToWindows(eWinStyleMoveable + eWinStyleSizeable);
    Window* w3 = gGui3.GetWindow();
    w3.MinWidth = 50;
    w3.MinHeight = 50;
    //w3.Padding[eWinSideLeft] = 5;
    //w3.Padding[eWinSideRight] = 5;
    //w3.Padding[eWinSideTop] = 5;
    //w3.Padding[eWinSideBottom] = 5;
    
    Button1.SetAnchor(eWinAnchorLeft | eWinAnchorTop | eWinAnchorRight);
    Button2.SetAnchor(eWinAnchorLeft | eWinAnchorTop | eWinAnchorRight);
    Button3.SetAnchor(eWinAnchorLeft | eWinAnchorTop | eWinAnchorRight);
    Button4.SetAnchor(eWinAnchorLeft);
    Button5.SetAnchor(eWinAnchorRight);
    Button6.SetAnchor(eWinAnchorTop);
    Button7.SetAnchor(eWinAnchorBottom);
    ListBox1.SetAnchor(eWinAnchorAll);
    ListBox1.AddItem("item 1");
    ListBox1.AddItem("item 2");
    ListBox1.AddItem("item 3");
    ListBox1.AddItem("item 4");
}

